import java.util.Scanner;
public class recursive {
	static int f(int a) {
		int b;
		b=2*a+5;
		if(a==1) {
			return -3;
		}
		return a+f(a-1);
	}

	public static void main(String[] args) {
	Scanner scan=new Scanner(System.in);
	int a,b,c,d;
	System.out.println("please choose number which u want for function");
	a=scan.nextInt();
	b=f(a);
	System.out.println(b);
	
	

	}

}
